<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ch.cyberduck</groupId>
    <artifactId>parent</artifactId>
    <packaging>pom</packaging>
    <version>4.8.0-SNAPSHOT</version>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>

    <build>
        <outputDirectory>${project.basedir}/build</outputDirectory>
        <sourceDirectory>${project.basedir}/source</sourceDirectory>
        <testSourceDirectory>${project.basedir}/test</testSourceDirectory>
        <extensions>
            <extension>
                <groupId>org.springframework.build</groupId>
                <artifactId>aws-maven</artifactId>
                <version>5.0.0.RELEASE</version>
            </extension>
        </extensions>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>run-ant-clean-target</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <property name="version" value="${project.version}"/>
                                <ant antfile="${project.basedir}/build.xml" target="clean" dir="."/>
                            </tasks>
                        </configuration>
                    </execution>
                    <execution>
                        <id>run-ant-build-target</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <property name="version" value="${project.version}"/>
                                <ant antfile="${project.basedir}/build.xml" target="build" dir="."/>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.5.2</version>
                <inherited>false</inherited>
                <executions>
                    <execution>
                        <id>install-config</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>ch.iterate.cyberduck</groupId>
                            <artifactId>config</artifactId>
                            <version>${project.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/build/config-${project.version}.jar</file>
                            <pomFile>${project.basedir}/pom/config/pom.xml</pomFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-core</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>ch.iterate.cyberduck</groupId>
                            <artifactId>core</artifactId>
                            <version>${project.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/build/core-${project.version}.jar</file>
                            <pomFile>${project.basedir}/pom/core/pom.xml</pomFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-fs</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>ch.iterate.cyberduck</groupId>
                            <artifactId>fs</artifactId>
                            <version>${project.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/build/core-${project.version}.jar</file>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-cli</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>ch.iterate.cyberduck</groupId>
                            <artifactId>cli</artifactId>
                            <version>${project.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/build/core-${project.version}.jar</file>
                            <pomFile>${project.basedir}/pom/cli/pom.xml</pomFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-ui</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>ch.iterate.cyberduck</groupId>
                            <artifactId>ui</artifactId>
                            <version>${project.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/build/ui-${project.version}.jar</file>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-binding</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>ch.iterate.cyberduck</groupId>
                            <artifactId>binding</artifactId>
                            <version>${project.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/build/binding-${project.version}.jar</file>
                            <pomFile>${project.basedir}/pom/binding/pom.xml</pomFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-cocoa</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>ch.iterate.cyberduck</groupId>
                            <artifactId>cocoa</artifactId>
                            <version>${project.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/build/binding-${project.version}.jar</file>
                            <pomFile>${project.basedir}/pom/cocoa/pom.xml</pomFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>maven.iterate.ch-release</id>
            <url>s3://repo.maven.iterate.ch/releases/</url>
            <layout>default</layout>
        </repository>
        <snapshotRepository>
            <id>maven.iterate.ch-snapshot</id>
            <url>s3://repo.maven.iterate.ch/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>maven.iterate.ch-release</id>
            <url>s3://repo.maven.iterate.ch/releases/</url>
            <layout>default</layout>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>maven.iterate.ch-snapshot</id>
            <url>s3://repo.maven.iterate.ch/snapshots/</url>
            <layout>default</layout>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
</project>