<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ch.cyberduck</groupId>
        <artifactId>parent</artifactId>
        <relativePath>../../pom.xml</relativePath>
        <version>4.7.3-SNAPSHOT</version>
    </parent>
    <artifactId>Cyberduck.Core.Native</artifactId>
    <packaging>pom</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>install-winforms-dll</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <type>dll</type>
                                    <file>${project.basedir}/../../build/Cyberduck.Core.Native.dll</file>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>ch.cyberduck</groupId>
            <artifactId>ui</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>net.structuremap</groupId>
            <artifactId>structuremap</artifactId>
            <classifier>native</classifier>
            <type>dll</type>
            <version>2.6.1</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>objectlistview</groupId>
            <artifactId>objectlistview</artifactId>
            <classifier>native</classifier>
            <type>dll</type>
            <version>2.5.1.35588</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>net.java.dev.jna</groupId>
            <artifactId>jna</artifactId>
            <version>4.2.0</version>
        </dependency>
        <dependency>
            <groupId>net.java.dev.jna</groupId>
            <artifactId>jnidispatch</artifactId>
            <classifier>native</classifier>
            <type>dll</type>
            <version>4.2</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>sunmscapi</groupId>
            <artifactId>sunmscapi</artifactId>
            <version>7.0.250.17</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>sunmscapi</groupId>
            <artifactId>sunmscapi</artifactId>
            <classifier>native</classifier>
            <type>dll</type>
            <version>7.0.250.17</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>sunec</groupId>
            <artifactId>sunec</artifactId>
            <classifier>native</classifier>
            <type>dll</type>
            <version>8.0.40.26</version>
            <scope>runtime</scope>
        </dependency>
    </dependencies>
</project>